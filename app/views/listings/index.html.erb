<div class="index-wrapper">

  <div class="plan-fixed toggled">

    <% if current_user.listings_without_match.size > 1 %>
    <div class="chevron-circle">
      <i class="fa fa-circle chevron-circle-size" aria-hidden="true"></i>
      <div class="chevron-up-down">
        <i id="chevron-identifier" class="fa fa-chevron-up" aria-hidden="true"></i>
      </div>
    </div>
    <% end %>
    <% current_user.listings_without_match.each_with_index do |listing, index| %>
    <div class="plan current-user-plan">
      <% if index == 0 %>
        <%= image_tag current_user.facebook_picture_url.gsub("square","large"), class: "img-cirlce" %>
      <% else %>
        <div class="empty-picture"></div>
      <% end %>
      <div class="plan-info">
        <p class="plan-user"><%= current_user.first_name %></p>
        <p class="plan-emoji"><%= listing.activity %></p>
        <p class="plan-datetime"><%= listing.offered_datetime_text %></p>
        <%= link_to listing_path(listing) do  %>
        <i class="fa fa-chevron-right chevron-color" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <% @listings.each do |listing| %>

  <div class="plan">
    <% if listing.photo_exist? %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/mwahrlich", class: "img-cirlce" %>
    <% else %>
    <%= image_tag listing.user.facebook_picture_url.gsub("square","large") %>
    <% end %>
    <div class="plan-info">
      <p class="plan-user"><%= listing.user.first_name %></p>
      <p class="plan-emoji"><%= listing.activity %></p>
      <p class="plan-datetime"><%= listing.offered_datetime_text%></p>
      <%= link_to listing_path(listing) do  %>
      <i class="fa fa-chevron-right chevron-color" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>

  <% end %>
</div>
