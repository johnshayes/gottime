


  <div class="container-fluid">
  <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-sm-offset-3 col-md-offset-3 col-lg-offset-4">
          <div class="booking-wrapper">
            <h2>Please enter your booking dates:</h2>
            <%= simple_form_for([ @listing ]) do |form| %>
            <div id="sandbox-container">
              <div class="input-group input-daterange">
                <%= form.input :offered_datetime_text, as: :string, input_html: { class: 'dates_booked' } %>
                <div class="input-group-addon datepickertoinvisible"></div>
                <%= form.input :activity, as: :string, input_html: { class: 'dates_booked' } %>
              </div>
            </div>

            <br>
            <%= form.button :submit %>
            <% end %>
          </div>
        </div>
  </div>
