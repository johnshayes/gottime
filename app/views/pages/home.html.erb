
<div class="body-wrapper">


  <% content_for :navbar_title do %>
    Meet friends, be happy
  <% end %>


  <% content_for :head do %>
    <meta name="turbolinks-cache-control" content="no-cache">
  <% end %>

  <div class="background">
    <div class="welcome">
      <h1>Welcome to Quokka</h1>
      <h2>Meet your friends spontaneously!</h2>
    </div>
    <div class="sign-in sign-in-home">
      <% unless current_user %>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
      <% else %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% end %>

    </div>
  </div>
</div>



<div id="fullpage">
  <div class="section">Some section1</div>
  <div class="section">Some section2</div>
  <div class="section">Some section3</div>
  <div class="section">Some section4</div>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#fullpage').fullpage({
        navigation: false,
        navigationPosition: 'right'
      });
    });
  <% end %>
<% end %>

