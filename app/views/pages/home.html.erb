
<% content_for :navbar_title do %>
Meet friends, be happy
<% end %>


<% content_for :head do %>
<meta name="turbolinks-cache-control" content="no-cache">
<% end %>


<div id="fullpage">

  <div class="section section-log-in">
    <div class="background">
      <div class="landing-background emoji_home" style="background-image: url('<%= cl_image_path( "emoji_home" , height: 667, width: 375, crop: :fill) %>')">
        <div class="welcome">

          <h1>Hey you! gotTime?</h1>
          <h2>Meet your friends spontaneously!</h2>
        </div>
        <div class="information-action-call">
          <p>Swipe up to find out more!</p>
        </div>
      </div>
    </div>
  </div>

  <div class="section section-quick-description">
    <div class="content">
      <div class="spacer-top sticky-top">

      </div>

      <div class="landing-background" style="background-image: url('<%= cl_image_path( "background_home" , height: 667, width: 375, crop: :fill) %>')">

        <div class="sing-up-descriptions">
          <div class="breakfast">
            <h2><strong>3 p.m.</strong> - just woke up with a hangover…</h2>
            <h3>🍰 NOW</h3>
          </div>

          <div class="party">
            <h2><strong>Friday</strong> - forgot to make party plans…</h2>
            <h3>🚀 TONIGHT</h3>
          </div>

          <div class="whatever">
            <h2>Why is everyone busy??</h2>
            <h3>🤷 +1h</h3>
          </div>
        </div>
      </div>

      <div class="spacer-bottom sticky-bottom">
      </div>
    </div>

  </div>

  <div class="section section-some-section3">

    <div class="content">
      <div class="spacer-top sticky-top">

      </div>

      <div class="landing-background emoji_home" style="background-image: url('<%= cl_image_path( "emoji_home" , height: 667, width: 375, crop: :fill) %>')">

        <div class="sing-up-descriptions page-3">
          <div class="step-1">
            <h3>📅</h3>
            <h2 class="nummeration-signin">1.</h2>
            <h2>Propose a plan to your facebook friends!</h2>
          </div>

          <div class="step-2">
            <h2>2. Wait to be matched or select a friend to hang out with.</h2>
            <h3>👫</h3>
          </div>

          <div class="step-3">
            <h3>💃🏾🕺🏻  </h3>
            <h2 class="nummeration-signin">3.</h2>
            <h2>Fix the last details and then: Have fun!!</h2>
          </div>
        </div>
      </div>

      <div class="spacer-bottom sticky-bottom">
      </div>
    </div>

  </div>

</div>


<div class="sticky-top">
  <div class="scroll-button" id="test">
    <i class="fa fa-chevron-up fa-2x hidden-arrow arrow" id="arrow_up"></i>
  </div>
</div>

<div class="sticky-bottom">
  <div class="facebook-button">
    <% unless current_user %>
    <%= link_to raw('<div class="sign-in facebook-sign-in-button">Sign in with Facebook</div>'), user_facebook_omniauth_authorize_path %>
    <% else %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% end %>
  </div>
  <div class="scroll-button" id="test">
    <i class="fa fa-chevron-down fa-2x arrow" id="arrow_down"></i>
  </div>
</div>



<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
$('#fullpage').fullpage({
navigation: false,
navigationPosition: 'right',
sectionsColor: ['white', 'white', 'white' ],
anchors:['firstPage', 'secondPage', 'thirdPage', 'fourthPage'],
onLeave: function(index, nextIndex, direction){
var leavingSection = $(this);
if(index == 1 && direction =='down'){
$('#arrow_up').toggleClass('hidden-arrow');
console.log("hi");
}
if(index == 2 && direction =='down'){
$('#arrow_down').toggleClass('hidden-arrow');
}

else if(index == 3 && direction == 'up'){
$('#arrow_down').toggleClass('hidden-arrow');
}
else if(index == 2 && direction == 'up'){
$('#arrow_up').toggleClass('hidden-arrow');
}

}
});

});



$(document).ready(function(){
$('#arrow_up').click(function(){
$.fn.fullpage.moveSectionUp();
});
$('#arrow_down').click(function(){
$.fn.fullpage.moveSectionDown();
});
});



<% end %>
<% end %>

